# NPM Configuration for Render Deployment
# Handle peer dependency conflicts

# Use legacy peer deps resolution for compatibility
legacy-peer-deps=true

# Disable package-lock for CI environments
package-lock=false

# Always use legacy peer deps
legacy-peer-deps=true

# Set registry (optional - use default)
registry=https://registry.npmjs.org/

# Disable audit for faster installs in CI
audit=false

# Set log level
loglevel=warn
