# Render Production Environment Variables for Frontend
# Copy these to your Render static site environment variables

# Backend API URL - Update with your actual Render backend URL
VITE_API_URL=https://school-management-backend.onrender.com/api

# Application Configuration
VITE_APP_NAME=Zinat Al-Haya School Management
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# Localization
VITE_DEFAULT_LOCALE=ar

# Development Features (disabled in production)
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false

# Session Configuration
VITE_SESSION_TIMEOUT=60

# API Configuration
VITE_API_TIMEOUT=30000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10

# Theme Configuration
VITE_DEFAULT_THEME=light

# Performance Configuration
VITE_LAZY_LOADING=true
VITE_CACHE_DURATION=3600

# Error Tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=false
